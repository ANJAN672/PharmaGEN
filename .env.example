# PharmaGEN Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Configuration (REQUIRED)
# ============================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-1.5-flash-latest
GEMINI_TEMPERATURE=0.7
GEMINI_TRANSLATION_TEMP=0.1

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# ============================================
# Redis Configuration (Optional - for production)
# ============================================
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Cache Configuration
# ============================================
CACHE_ENABLED=True
CACHE_TTL=3600

# ============================================
# Server Configuration
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=7860
DEBUG_MODE=False

# ============================================
# Security
# ============================================
MAX_MESSAGE_LENGTH=2000
ALLOWED_ORIGINS=*

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=pharmagen.log

# ============================================
# PDF Configuration
# ============================================
PDF_OUTPUT_DIR=./reports
MAX_PDF_SIZE_MB=10

# ============================================
# Session Configuration
# ============================================
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=100

# ============================================
# UI/UX Configuration
# ============================================
APP_TITLE=PharmaGEN
APP_SUBTITLE=Next-Gen Medical Assistant & Drug Concept Generator
APP_EMOJI=ðŸ§¬
THEME_PRIMARY_COLOR=indigo
THEME_SECONDARY_COLOR=cyan
CHATBOT_HEIGHT=600
ENABLE_QUEUE=True
MAX_QUEUE_SIZE=10

# ============================================
# Language Configuration
# ============================================
DEFAULT_LANGUAGE=English
SHOW_LANGUAGE_EXAMPLES=True

# ============================================
# Feature Flags
# ============================================
ENABLE_PDF_DOWNLOAD=True
ENABLE_CHAT_HISTORY=True
SHOW_DISCLAIMER=True
